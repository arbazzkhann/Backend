<html>
  <head>
    <title>Registered Houses</title>
    <link rel="stylesheet" href="/output.css" />
  </head>
  <body>
    <!-- Navbar -->
    <%- include('../partials/navbar.ejs', {activePath}) %>

    <!-- Main body -->
    <section class="text-center py-20 bg-white">
      <div class="max-w-2xl mx-auto px-4">
        <h2 class="text-red-500 text-2xl md:text-5xl font-bold mb-7">
          🏠 Houses List
        </h2>

        <!-- Houses names and city code -->
        <!-- Houses Listing -->
        <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-8 mt-8 max-w-7xl mx-auto px-4">
          <% registeredHouses.forEach(house => { %>
            <li class="bg-white border border-gray-200 rounded-xl shadow-md hover:shadow-xl transition duration-300 overflow-hidden w-full">
              
              <!-- House Photo -->
              <a href="/house/<%=house._id%>">
              <img 
                src="<%= house.image %>"
                alt="<%= house.houseName %>" 
                class="w-full h-56 object-cover"
              />

              <!-- House Info -->
              <%- include('../partials/favourite-button.ejs', {house: house})%>

              <div class="p-4 mt-0 pt-0">
                <h3 class="text-lg font-semibold text-gray-800 truncate"><%= house.houseName %></h3></a>
                <p class="text-sm text-gray-500">📍 <%= house.houseLocation %></p>
              </div>

              <!-- Price Footer -->
              <div class="bg-red-500 text-white text-base font-semibold text-center py-2">
                ₹<%= house.housePrice %> / day
              </div>

            </li>
          <% }) %>
        </ul>
        <a
          href="/"
          class="inline-block bg-red-500 text-white px-6 py-3 mt-10 rounded-md text-lg font-medium hover:bg-red-600 transition duration-300"
        >
          Go Home
        </a>
      </div>
    </section>

  </body>
</html>
