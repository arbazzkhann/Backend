<html>
  <head>
    <title>House Details</title>
    <link rel="stylesheet" href="../public/output.css" />
  </head>
  <body>
    <!-- Navbar -->
    <%- include('../partials/navbar.ejs') %>

    <!-- Main body -->
    <section class="text-center py-20 bg-white">
      <div class="max-w-2xl mx-auto px-4">
        <h2 class="text-red-500 text-2xl md:text-5xl font-bold mb-7">
          🏠 House Details Page
        </h2>

        <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-8 mt-8 max-w-7xl mx-auto px-4">
                <li class="bg-white border border-gray-200 rounded-xl shadow-md hover:shadow-xl transition duration-300 overflow-hidden w-full">
                
                <!-- House Photo -->
                <img 
                    src="<%= house.housePhotoLink %>" 
                    alt="<%= house.houseName %>" 
                    class="w-full h-56 object-cover"
                />

                <!-- House Info -->
                <div class="p-4">
                    <h3 class="text-lg font-semibold text-gray-800 truncate"><%= house.houseName %></h3>
                    <p class="text-sm text-gray-500">📍 <%= house.houseState %></p>
                </div>

                <!-- Price Footer -->
                <div class="bg-red-500 text-white text-base font-semibold text-center py-2">
                    ₹<%= house.housePrice %> / day
                </div>

                </li>
        </ul>













    </section>

  </body>
</html>
